#include <stdio.h>
#include <string.h>
#include <math.h>
#include <stdlib.h>

int main()
{
    int s,s1;
    float f,f1;
    int sum;
    int diff;
    float sum1,diff1;
    scanf("%i %i",&s,&s1);
    scanf("%f %f",&f,&f1);
    //printf("%i %i",s,s1);
    sum=s+s1;
    diff=s-s1;
    printf("%i %i \n",sum,diff);
    sum1=f+f1;
    diff1=f-f1;
    printf("%.1f %.1f",sum1,diff1);
   
    
    
    return 0;
}
